.Switch-label {
    display: block;
    font: 300 1.266rem/1.75rem system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,sans-serif;
}

.Switch-label:before {
    box-shadow: 0 0 0 1px #1d1d1d;
    content: "";
    height: 2rem;
    left: 0;
    position: absolute;
    top: 0;
    width: 2rem;
    z-index: 1;
}

.Switch--radio .Switch-label:after {
    background: #1d1d1d;
    border: 0.5rem solid #fff;
    border-radius: 50%;
    height: 2rem;
    left: 0;
    top: 0;
    transform: none;
    width: 2rem;
}

.Switch-label:after {
    background: transparent;
    border: solid #1d1d1d;
    border-top: solid transparent;
    border-width: 0 0 0.25rem 0.25rem;
    content: "";
    height: 0.5rem;
    left: 0.3rem;
    opacity: 0;
    position: absolute;
    top: 0.6rem;
    transform: rotate(-45deg) scale(.75);
    width: 1.25rem;
}

.Switch--radio .Switch-label:before {
    border-radius: 50%;
}

.Switch-input:checked+.Switch-label:after {
    opacity: 1;
}

.Fieldset-legend {
    display: block;
    float: left;
